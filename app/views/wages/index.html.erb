<p id="notice"><%= notice %></p>

<h1>Wages</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time logged</th>
      <th>Hourly rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wages.each do |wage| %>
      <tr>
        <td><%= wage.date %></td>
        <td><%= wage.time_logged.strftime("%I:%M") %></td>
        <td><%= wage.time_logged.seconds_since_midnight / 3600.0 %></td>
        <td><%= wage.hourly_rate %></td>
        <td><%= link_to 'Show', wage %></td>
        <td><%= link_to 'Edit', edit_wage_path(wage) %></td>
        <td><%= link_to 'Destroy', wage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

