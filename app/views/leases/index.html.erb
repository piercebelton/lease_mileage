<p id="notice"><%= notice %></p>

<h3>Welcome to Lease Mileage Calculator!</h3>
<br/>
<table>
  <thead>
    <tr>
      <th>Initial lease dates |</th>
      <th> Miles per year |</th>
      <th> Lease term(Months) |</th>
      <th> Projected Mileage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leases.each do |lease| %>
      <tr>
        <td><%= lease.initial_lease_date %></td>
        <td><%= lease.miles_per_year %></td>
        <td><%= lease.lease_term %></td>
        <td><%= lease.projected_mileage %></td>
        <td><%= link_to 'Show', lease %></td>
        <% if lease.user == current_user %>
          <td><%= link_to 'Edit', edit_lease_path(lease) %></td>
          <td><%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Lease', new_lease_path %>
<% else %>
  <p>Log in or sign up to add your own!</p>
<% end %>
