<p id="notice"><%= notice %></p>

<h3>Welcome to Lease Mileage Calculator!</h3>
<br/>
<table class="table table-responsive table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Initial lease date</th>
      <th>Miles per year</th>
      <th>Lease term(Months)</th>
      <th>Projected Mileage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leases.each do |lease| %>
      <tr>
        <td class="lease-td"><%= lease.initial_lease_date %></td>
        <td class="lease-td"><%= lease.miles_per_year %></td>
        <td class="lease-td"><%= lease.lease_term %></td>
        <td class="lease-td"><%= lease.projected_mileage %></td>
        <% if lease.user == current_user %>
          <td class="btn-toolbar"><%= button_to 'Edit', edit_lease_path(lease), method: :get, class: 'btn btn-primary lease-btn' %>
          <%= button_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger lease-btn' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Lease', new_lease_path %>
<% else %>
  <p>Log in or sign up to add your own!</p>
<% end %>
