      <h2><%= pluralize(lease.errors.count, "error") %> prohibited this lease from being saved:</h2>

      <ul>
      <% lease.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Name your vehicle" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :initial_lease_date %>
    <%= f.date_select :initial_lease_date %>
  </div>

  <div class="field">
    <%= f.label :miles_per_year %>
    <%= f.number_field :miles_per_year %>
  </div>

  <div class="field">
    <%= f.label "Lease Term (months)" %>
    <%= f.select :lease_term, [6, 12, 18, 24, 30, 36, 42, 48, 54, 60]%>
  </div>

  <div class="field">
    <%= f.label :current_mileage %>
    <%= f.number_field :current_mileage %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-success"%>
  </div>
<% end %>
